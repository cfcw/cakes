<h1>Listing reputations</h1>

<table>
  <tr>
    <th>Shop</th>
    <th>Item</th>
    <th>User</th>
    <th>Reputation</th>
    <th>Rank</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reputations.each do |reputation| %>
  <tr>
    <td><%= reputation.shop %></td>
    <td><%= reputation.item %></td>
    <td><%= reputation.user %></td>
    <td><%= reputation.reputation %></td>
    <td><%= reputation.rank %></td>
    <td><%= link_to 'Show', reputation %></td>
    <td><%= link_to 'Edit', edit_reputation_path(reputation) %></td>
    <td><%= link_to 'Destroy', reputation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

